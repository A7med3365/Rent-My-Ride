<div id="new-car" class="car">
  <a href="/cars/rentOutForm">Add a new car</a>
</div>

<% for (car of cars) { %>
<div class="car">
  <span><%= car.carMake %> <%= car.carModel %> <%= car.carYear %></span>
  <div class="buttons">
    <a href="/cars/editCarForm?id=<%= car._id %>" class="edit-button">Edit</a>
    <a href="/cars/carDetail?id=<%= car._id %>" class="view-button">View</a>
    <a href="/ownCarsIndex/delete?id=<%= car._id %>" class="delete-button"
      >Delete</a
    >
  </div>
</div>
<% } %>

<style>
  .car {
    display: inline-block;
    height: 100%;
    width: 97%;
    border: 1px solid lightgray;
    background-color: lightgray;
    border-radius: 10px;
    padding: 10px;
    margin: 10px;
    font-family: Arial, sans-serif;
    font-size: 16px;
  }

  .car span {
    display: block;
    height: 100%;
    width: 100%;
    color: black;
    text-decoration: none;
  }

  .car .buttons {
    margin-top: 10px;
  }

  .car .edit-button,
  .car .view-button {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
  }

  .car .edit-button {
    background-color: #4caf50; /* Green */
  }

  .car .view-button {
    background-color: #2196f3; /* Blue */
  }

  #new-car {
    margin-top: 2%;
    margin-bottom: 2%;
  }

  .car .delete-button {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    background-color: #f44336; /* Red */
  }

  .car .delete-button:hover {
    background-color: #d32f2f; /* Darker red on hover */
  }
  .car .view-button:hover {
    background-color: #10498a; /* Darker blue on hover */
  }
  .car .edit-button:hover {
    background-color: #29642c; /* Darker green on hover */
  }
</style>
