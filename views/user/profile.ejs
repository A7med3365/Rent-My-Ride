<h2>My Profile</h2>

<hr />

<form class="profile-form" method="GET" action="/user/edit-profile">
  <div>
    <div class="profile-image">
      <img src="<%= picPath %>" style="width: 100%" />
    </div>
  </div>
  <div>
    <label class="profile-label">First Name</label>
    <div
      class="profile-input"
      type="text"
      name="firstName"
    ><%= user.firstName %></div>
  </div>
  <div>
    <label class="profile-label">Last Name</label>
    <div
      class="profile-input"
      type="text"
      name="lastName"
    ><%= user.lastName%></div>
  </div>
  <div>
    <label class="profile-label">Email</label>
    <div
      class="profile-input"
      type="text"
      name="email"
    ><%= user.email%></div>
  </div>
  <div>
    <label class="profile-label">Phone Number</label>
    <div
      class="profile-input"
      type="number"
      name="phoneNumber"
    ><%= user.phoneNumber%></div>
  </div>
  <div>
    <button class="btn">Edit Profile</button>
  </div>
</form>
